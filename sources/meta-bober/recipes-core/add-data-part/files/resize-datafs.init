#!/bin/sh

set -e

do_expand_datafs(){
    if ! [ -h /dev/disk/by-label/data ]; then
      echo "/dev/disk/by-label/data does not exist or is not a symlink. Don't know how to expand"
      return 2
    fi

    ROOT_PART=$(readlink /dev/disk/by-label/data)
    PART_NUM=${ROOT_PART#../../mmcblk?p}
    if [ "$PART_NUM" = "$ROOT_PART" ]; then
      echo "/dev/disk/by-label/data is not an SD card. Don't know how to expand"
      return 3
    fi

    PART_DEV=${ROOT_PART#../../}
    PART_DEV=${PART_DEV%p${PART_NUM}}

    LAST_PART_NUM=$(parted /dev/${PART_DEV} -ms unit s p | tail -n 1 | cut -f 1 -d:)
    if [ "$LAST_PART_NUM" != "$PART_NUM" ]; then
      echo "/dev/disk/by-label/data is not the last partition. Don't know how to expand"
      return 4
    fi

    # Get the starting offset of the partition
    PART_START=$(parted /dev/${PART_DEV} -ms unit s p | grep "^${PART_NUM}" | cut -f 2 -d:)
    # Remove suffix:
    PART_START=${PART_START%s}
    echo "resizing root partition, starts at offset: $PART_START"
    [ "$PART_START" ] || return 5

    # Return value will likely be error for fdisk as it fails to reload the
    # partition table because the fs is mounted
    fdisk -u /dev/${PART_DEV} <<EOF > /dev/null 2>&1
p
d
$PART_NUM
n
p
$PART_NUM
$PART_START

p
w
EOF

  sync
  echo "Probing the partition table... "
  partprobe

  echo "Resizing the partition... "
  resize2fs /dev/disk/by-label/data   || return $?
}

case "$1" in
  start)
    reboot=false

    echo "Expanding data partition..."

    if do_expand_datafs  ;
    then
      echo "Expanding partition success"
    else
      echo "Expanding partition has failed, see log files. Error code: $?"
    fi

    #update-rc.d -f resize-datafs remove >/dev/null 2>&1
    systemctl disable resize-datafs.service > /dev/null 2>&1

  ;;

  *)
    echo "Usage: $0 {start}" >&2
    exit 1
  ;;
esac

exit 0